<ResourceDictionary
    x:Name="NightTheme"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartHome">

    <SolidColorBrush x:Key="BackgroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ListViewBackgroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ListViewBorderBrush" Color="AliceBlue"/>
    <SolidColorBrush x:Key="FontColor" Color="AliceBlue"/>
    <BitmapImage x:Key="BackButton" UriSource="/Assets/Back_Button_White.png"/>
    <BitmapImage x:Key="SelectButton" UriSource="/Assets/Ok_Button_White.png"/>
    <BitmapImage x:Key="SettingsButton" UriSource="/Assets/settings_White.png"/>
    <BitmapImage x:Key="AddRoomButton" UriSource="/Assets/Add_Room_White.png"/>
    <BitmapImage x:Key="DecreaseButton" UriSource="/Assets/Minus_Button_White.png"/>
    <BitmapImage x:Key="RoomsButton" UriSource="/Assets/Rooms_Button_White.png"/>
    <BitmapImage x:Key="DeleteButton" UriSource="/Assets/Delete_Button_White.png"/>
    <BitmapImage x:Key="NewButton" UriSource="/Assets/New_Button_White.png"/>
    <BitmapImage  x:Key="ControlButton" UriSource="/Assets/Control_Button_White.png"/>
    <BitmapImage x:Key="LoginButton" UriSource="/Assets/Login_Button_White.png"/>
    <BitmapImage  x:Key="LogoutButton" UriSource="/Assets/Logout_Button_White.png"/>

    <Style  TargetType="TextBlock" x:Name="Datas">
        <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5 1 1 1"/>
        <Setter Property="FontSize" Value="0.5"/>
    </Style>

    <Style TargetType="Button" x:Name="ButtonStyle">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="AliceBlue"/>
    </Style>
    <Style TargetType="PasswordBox" x:Name="PasswordBoxStyle">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="AliceBlue"/>
    </Style>
    <Style TargetType="TextBlock" x:Name="TextBlockStyle">
        <Setter Property="Foreground" Value="AliceBlue"/>
    </Style>
    <Style TargetType="TextBox" x:Name="TextBoxStyle">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="AliceBlue"/>
    </Style>

    <Style TargetType="ToggleSwitch" x:Name="ToggleSwitchStyle">
        <Setter Property="Foreground" Value="AliceBlue"/>
    </Style>
    
    <SolidColorBrush x:Key="LightON" Color="Yellow"/>
    <SolidColorBrush x:Key="LightOFF" Color="Gray"/>
    <SolidColorBrush x:Key="AutoON" Color="LightBlue"/>
</ResourceDictionary>